<h1>Фурнитура</h1>
    <div id="demo" class="clearfix">
<table class="display" id="example">
  <thead>
      <tr>
        <th>Название</th>
        <th>Стоимость</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
  </thead>

  <tbody>
        <% @findings.each do |finding| %>
          <tr>
            <td><%= finding.name %></td>
            <td class="center"><%= finding.cost %></td>
            <td class="center"><%= link_to 'Просмотреть', finding %></td>
            <td class="center"><%= link_to 'Редактрировать', edit_lock_path(finding) %></td>
            <td class="center"><%= link_to 'Удалить', finding, :confirm => 'Are you sure?', :method => :delete %></td>
          </tr>
        <% end %>
  </tbody>
</table>
</div>
<br />

<h6><%= link_to 'Добавить фурнитуру', new_finding_path %></h6>
